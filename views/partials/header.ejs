  <div id="id01" class="modal">
  
  <form class="modal-content animate" action="" method="post">
    <div class="imgcontainer">
      <span onclick="document.getElementById('id01').style.display='none'" class="close" title="">&times;</span>
      <img src="images/carrinho.jpg" alt="" class="CadastroLogin">
    </div>

    <div class="containerHeader">
      <label for="uname"><b>Username</b></label>
      <input type="text" placeholder="Enter Username" name="uname" required>

      <label for="psw"><b>Password</b></label>
      <input type="password" placeholder="Enter Password" name="psw" required>
        
      <button type="submit">Login</button>
      <label>
        <input type="checkbox" checked="checked" name="remember"> Remember me
      </label>
    </div>

    <div class="containerHeader" style="background-color:#f1f1f1">
      <button type="button" onclick="document.getElementById('id01').style.display='none'" class="cancelbtn">Cancel</button>
      <span class="psw">Forgot <a href="#">password?</a></span>
    </div>
  </form>
</div>

<div id="id02" class="modal">
  
	<form class="modal-content animate" action="/customers" method="post">
	  <div class="imgcontainer">
		<span onclick="document.getElementById('id02').style.display='none'" class="close" title="">&times;</span>
		<img src="images/carrinho.jpg" alt="" class="CadastroLogin">
	  </div>
  
	  <div class="containerHeader">
		<label for="username"><b>Username</b></label>
		<input type="text" id="username" placeholder="Enter Username" name="username" required>

		<label for="email"><b>Email</b></label>
		<input type="email" id="Email" placeholder="Enter Email" name="email" required>
  
		<label for="password"><b>Password</b></label>
		<input type="password" id="password" placeholder="Enter Password" name="password" required>

		<label for="cpf"><b>CPF</b></label>
		<input type="cpf" id="cpf" placeholder="Digite seu CPF" name="cpf" required>

		<label for="phoneNumber"><b>Telefone</b></label>
		<input type="tel" id="phoneNumber" placeholder="Digite seu tel" name="phoneNumber" required>
		  
		<br>
		<button type="submit">Cadastrar</button>
		<label>
		  <input type="checkbox" checked="checked" name="remember"> Remember me
		</label>
	  </div>
  
	  <div class="containerHeader" style="background-color:#f1f1f1">
		<button type="button" onclick="document.getElementById('id02').style.display='none'" class="cancelbtn">Cancel</button>
		<span class="psw">Forgot <a href="#">password?</a></span>
	  </div>
	</form>
  </div>


